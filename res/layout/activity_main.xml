<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.virginia.chordedkeyboard.MainActivity" >

    <Button
        android:id="@+id/Pinky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:minHeight="350dip"
        android:minWidth="120dip"
        android:text="Pinky" />

    <Button
        android:id="@+id/Ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/Pinky"
        android:minHeight="350dip"
        android:minWidth="120dip"
        android:text="Ring" />

    <Button
        android:id="@+id/Middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/Ring"
        android:minHeight="350dip"
        android:minWidth="120dip"
        android:text="Middle" />

    <Button
        android:id="@+id/Pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/Middle"
        android:minHeight="350dip"
        android:minWidth="120dip"
        android:text="Pointer" />

    <Button
        android:id="@+id/Thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/Pointer"
        android:minHeight="350dip"
        android:minWidth="120dip"
        android:text="Thumb" />

    <TextView
        android:id="@+id/selectedLetterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Pointer"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/Thumb"
        android:text="Letter will go here"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sentenceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Pinky"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/selectedLetterView"
        android:layout_marginTop="52dp"
        android:text="Sentence Will Go Here"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>